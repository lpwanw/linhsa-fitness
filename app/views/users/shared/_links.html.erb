<hr>

<div>
  <%- if controller_name != 'sessions' %>
    <p class="text-sm font-light text-gray-500 dark:text-gray-400">
      <%= t ".Already have an account?" %>
      <%= link_to t(".Login here"), new_user_session_path, class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="text-sm font-light text-gray-500 dark:text-gray-400">
      <%= t ".Donâ€™t have an account yet?" %>
      <%= link_to t(".Sign up here"), new_registration_path(resource_name), class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p class="text-sm font-light text-gray-500 dark:text-gray-400">
      <%= t ".Didn't receive confirmation instructions?" %>
      <%= link_to t(".Click me"), new_confirmation_path(resource_name), class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>

</div>

<section>
  <div class="relative bg-black/50 rounded-md grid px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
    <div class="mr-auto place-self-center lg:col-span-7">
      <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">
        <%= t ".hero.heading" %>
      </h1>
      <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
        <%= t ".hero.description" %>
      </p>
      <a href="#" class="inline-flex items-center justify-center px-5 py-3 mr-3 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900">
        <%= t ".hero.cta" %>
        <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
      </a>
    </div>
    <div class="absolute w-full h-full top-0 left-0 -z-50 bg-black/20 lg:mt-0 lg:col-span-5 lg:flex">
      <%= image_tag "placeholder.jpg", atl: "placeholder", class: "rounded-md w-full h-full object-cover" %>
    </div>
  </div>
</section>

<section class="mt-8">
  <div>
    <div class="relative bg-black/60 md:static  md:bg-transparent grid grid-cols-1 md:grid-cols-2 gap-4 px-4 py-8">
      <div>
        <h2 class="max-w-2xl mb-4 text-2xl font-extrabold tracking-tight leading-none md:text-3xl xl:text-4xl dark:text-white">
          <%= t ".feature.first.heading" %>
        </h2>
        <p class="max-w-2xl font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
          <%= t ".feature.first.paragraph" %>
        </p>
        <hr class="my-4">
        <ul class="text-gray-500 dark:text-gray-400">
          <% 3.times do |index| %>
            <li class="flex items-center gap-2">
              <div class="bg-primary-300 text-primary-600 dark:bg-primary-900 dark:text-primary-500 rounded-full">
                <svg aria-hidden="true" class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <%= t ".feature.first.items.#{index}" %>
            </li>
          <% end %>
        </ul>
        <a href="#" class="mt-2 inline-flex items-center justify-center mr-3 text-base font-medium text-center text-primary-500 rounded-lg">
          <%= t "common.more_information" %>
          <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
      </div>
      <div class="absolute w-full h-full top-0 left-0 -z-50 md:static order-first">
        <%= image_tag "placeholder.jpg", atl: "placeholder", class: "rounded-md w-full h-full object-cover" %>
      </div>
    </div>
    <div class="relative bg-black/60 md:static md:bg-transparent grid grid-cols-1 md:grid-cols-2 gap-4 mt-8 px-4 py-8">
      <div>
        <h2 class="mb-4 text-2xl font-extrabold tracking-tight leading-none md:text-3xl xl:text-4xl dark:text-white">
          <%= t ".feature.second.heading" %>
        </h2>
        <p class="font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
          <%= t ".feature.second.paragraph" %>
        </p>
        <hr class="my-4">
        <ul class="text-gray-500 dark:text-gray-400">
          <% 3.times do |index| %>
            <li class="flex items-center gap-2">
              <div class="bg-primary-300 text-primary-600 dark:bg-primary-900 dark:text-primary-500 rounded-full">
                <svg aria-hidden="true" class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <%= t ".feature.second.items.#{index}" %>
            </li>
          <% end %>
        </ul>
        <a href="#" class="mt-2 inline-flex items-center justify-center mr-3 text-base font-medium text-center text-primary-500 rounded-lg">
          <%= t "common.more_information" %>
          <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
      </div>
      <div class="absolute w-full h-full top-0 left-0 -z-50 md:static">
        <%= image_tag "placeholder.jpg", atl: "placeholder", class: "rounded-md w-full h-full object-cover" %>
      </div>
    </div>
  </div>
</section>

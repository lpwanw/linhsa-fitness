<div class="flex items-center justify-between p-4">
  <% if empty_pagy? %>
    <% if count.zero? %>
      <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
        <%= t ".Empty result!" %>
      </span>
    <% else %>
     <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
      <%= t ".Total" %>
       <span class="font-semibold text-gray-900 dark:text-white"><%= pagy.count %></span>
    </span>
    <% end %>
  <% else %>
    <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
      <%= t ".Showing" %>
      <span class="font-semibold text-gray-900 dark:text-white"><%= "#{from}-#{to}" %></span>
      <%= t ".of" %>
      <span class="font-semibold text-gray-900 dark:text-white"><%= count %></span>
    </span>
    <%== pagy_nav pagy %>
  <% end %>
</div>

<% case color %>
<% when :blue %>
  <span class="whitespace-nowrap bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
    <%= text %>
  </span>
<% when :dark %>
  <span class="whitespace-nowrap bg-gray-100 text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">
     <%= text %>
  </span>
<% when :red %>
  <span class="whitespace-nowrap bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">
    <%= text %>
  </span>
<% when :green %>
  <span class="whitespace-nowrap bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">
    <%= text %>
  </span>
<% when :yellow %>
  <span class="whitespace-nowrap bg-yellow-100 text-yellow-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">
    <%= text %>
  </span>
<% when :indigo %>
  <span class="whitespace-nowrap bg-indigo-100 text-indigo-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-indigo-900 dark:text-indigo-300">
    <%= text %>
  </span>
<% when :purple %>
  <span class="whitespace-nowrap bg-purple-100 text-purple-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-purple-900 dark:text-purple-300">
    <%= text %>
  </span>
<% when :pink %>
  <span class="whitespace-nowrap bg-pink-100 text-pink-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-pink-900 dark:text-pink-300">
    <%= text %>
  </span>
<% else %>
  <span class="whitespace-nowrap bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300"><%= text %></span>
<% end %>
